<?xml version="1.0" encoding="utf-8"?>
<dev.trindadedev.neobrutalism.NeoView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="5dp"
    android:gravity="center"
    app:backgroundMarginStart="6dp"
    app:backgroundMarginTop="6dp"
    app:backgroundRadius="15dp"
    app:backgroundShadowColor="?colorPrimary"
    app:foregroundColor="?colorSurfaceContainer"
    app:foregroundStrokeColor="?colorOutline"
    app:foregroundStrokeWidth="@dimen/neo_stroke_width">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/neubrutalism_font_1_regular"
        android:gravity="center"
        android:padding="20dp"
        android:text="Hello"
        android:textAlignment="center"
        android:textSize="18sp" />

</dev.trindadedev.neobrutalism.NeoView>